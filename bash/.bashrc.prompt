# MODULE: current working directory
ps1_get_cwd() {
  echo "${PWD/#$HOME/~}"
}
ps1_mod_cwd() {
  ps1_status "$(ps1_get_cwd)"
}
ps1_add cwd

# MODULE: virtualenv -- show the current python virtualenv
