: ${PS1_CHAR_RARR_FILLED:=$'\ue0b0'}  # ÓÇ∞  (powerline)
: ${PS1_CHAR_BRANCH:=$'\ue725'}       # Óú•  (devicons)
: ${PS1_CHAR_DIRTY:=$'\uf069'}        # ÔÅ©  (fontawesome)
