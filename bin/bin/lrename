#!/usr/bin/env bash

main() {
  local pcre=$1 x nx l nl d
  shift

  if [[ $pcre != [sy]/*[^[:alnum:]]* ]]; then
    echo "syntax: lrename s/pcre/repl/flags file(s)" >&2
    exit 1
  fi

  if [[ /$0 == */lrename ]]; then
    for x; do
      [[ -L $x ]] || continue
      l=$(readlink "$x")
      nl=$(perl -pe "$pcre" <<<"$l")
      ln -sfn "$nl" "$x"
    done
  else
    for x; do
      if [[ $x == */* ]]; then
        d=${x%/*}
        x=${x##*/}
      else
        d=.
      fi
      nx=$(perl -pe "$pcre" <<<"$x")
      [[ "$x" == "$nx" ]] || mv --no-clobber "$d/$x" "$d/$nx"
    done
  fi

  exit
}

main "$@"
