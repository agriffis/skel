#!/usr/bin/env bash
#
# scheme -- change color scheme for terminals and applications
#
# Copyright 2015, 2016 Aron Griffis <aron@scampersand.com>
# Released under the GNU GPL v2


main() {
    unset ${!opt_*}

    declare opt_config=$HOME/.schemes
    declare force_dark=false
    declare force_light=false
    declare opt_xterm_colors=
    declare opt_iterm2_scheme=
    declare opt_eval=false
    declare -a parsed_opts params

    ghettopt "$@" || exit
    set -- "${params[@]}"

    declare -a all_theme_vars
    all_theme_vars=(
        bat_theme
        emacs_theme
        gnome_theme
        gtk_theme
        iterm2_scheme
        vim_theme
        xterm_colors
    )

    load_default_schemes

    if [[ -e $opt_config ]] && ! source "$opt_config"; then
        die "Error loading $opt_config"
    fi

    case ${1:-restore} in
      restore)
        declare old_scheme=$(get_state)
        if [[ -z $old_scheme ]]; then
          die "Don't know the current scheme, can't restore"
        fi
        set -- "$old_scheme" "${@:2}"
        ;;

      toggle)
        declare old_scheme=$(get_state)
        if [[ -z $old_scheme ]]; then
          die "Don't know the current scheme, can't toggle"
        fi
        declare new_scheme=$(get_scheme_var "$old_scheme" toggle)
        if [[ -z $new_scheme ]]; then
          die "Can't toggle from $old_scheme, missing \$lookup"
        fi
        set -- "$new_scheme" "${@:2}"
        ;;

      *)
        set -- "${1//-/_}" "${@:2}"
        ;;
    esac

    if $opt_eval; then
        get_scheme_vars "$1"
    else
        set_scheme "$1"
    fi

    exit
}

get_state() {
    cat ~/.scheme 2>/dev/null
}

set_scheme() {
    declare scheme="$1"
    declare background "${all_theme_vars[@]}"

    eval "$(get_scheme_vars "$scheme")"

    update_state "$scheme"

    update_gnome "$gnome_theme" "$background" &
    update_gtk "$gtk_theme" "$background" &
    update_gnome_terminal Flex "$xterm_colors" /org/gnome/terminal/legacy/profiles:/ &
    update_gnome_terminal Flex "$xterm_colors" /com/gexperts/Tilix/profiles/ &
    #update_xfce_terminal "$xterm_colors" &  # XXX port to $xterm_colors
    #update_roxterm "$xterm_colors" &  # XXX port to $xterm_colors
    update_iterm2 "$iterm2_scheme" &
    update_kitty "$xterm_colors" # not backgrounded
    update_alacritty "$xterm_colors" # not backgrounded
    update_konsole "$background" &

    update_emacs "$emacs_theme" "$background" &
    update_vim "$vim_theme" "$background" &
    #update_tmux "$scheme" "$background" &
    update_bat "$bat_theme"
    update_delta "$bat_theme"

    wait # for anything backgrounded

    after_update_hook "${parsed_opts[@]}" "$@"
    exit 0
}

get_scheme_vars() {
    declare v scheme="$1"

    for v in background "${all_theme_vars[@]}"; do
        printf '%s=%q;\n' $v "$(get_scheme_var "$scheme" $v)"
    done
}

get_scheme_var() {
    declare scheme_var="$1_$2" opt_var="opt_$2"
    if [[ $2 == background ]] && $force_dark; then
        echo dark
    elif [[ $2 == background ]] && $force_light; then
        echo light
    elif [[ -n ${!opt_var} ]]; then
        echo "${!opt_var}"
    else
        echo "${!scheme_var}"
    fi
}

opt_dark() {
    if $force_light; then
        echo "Can't force both light and dark" >&2
        exit 1
    fi
    force_dark=true
}

opt_light() {
    if $force_dark; then
        echo "Can't force both light and dark" >&2
        exit 1
    fi
    force_light=true
}

opt_version() {
    echo "${0##*/} version 0.2"
    exit 0
}

die() {
    echo "$*" >&2
    exit 1
}

