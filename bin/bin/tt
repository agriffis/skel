#!/usr/bin/env bash

TT=$HOME/Dropbox/tt-$1.txt
shift

if [[ ! -f $TT ]]; then
    echo "Missing file: $TT" >&2
    exit 1
fi

last() {
    tail -n1 $TT
}

darg=()

case $1 in
    *:*) darg=( -d "$1" ); shift ;;
    e) exec ${EDITOR:-vim} "$TT" ;;
    l) last; exit ;;
    r) sed -i '$d' "$TT"; last; exit ;;
    *[!0-9]*) true ;;
    ?) darg=( -d "$1 minutes ago" ); shift ;;
esac

action=START
if [[ $(last) == START* ]]; then
    action=STOP
fi

printf '%s %s%s\n' \
    "$action" \
    "$(date "${darg[@]}" +%Y%m%d-%H%M%S)" \
    "${*:+ $*}" \
    | tee -a $TT
