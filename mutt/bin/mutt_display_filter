#!/bin/bash

trim_autoview() {
    sed -re 's/^([^ ]*|)(\[-- Autoview using [^ ]* ).*(--\])$/\1\2\3/'
}

use_localtime() {
    perl -00 -we '
        $_ = <>;
        s/^(Date: +)(\S.+)\n/$1.`date -R -d "$2"`/em;
        print;
        $/ = undef;
        print scalar <>;'
}
    
use_localtime | \
trim_autoview
