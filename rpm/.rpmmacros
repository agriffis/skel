%_user_home %{expand:%%(echo $HOME)}
%_whoami %{expand:%%(echo ${HOME##*/})}
%_fullname %{expand:%%([[ "%_whoami" == amg ]] && echo "Amy Griffis" || echo "Aron Griffis")}
%_email    %{expand:%%([[ "%_whoami" == amg ]] && echo "amy.griffis"@"gmail.com" || echo "aron"@"arongriffis.com")}
%_topdir %_user_home/redhat
%_signature gpg
%_gpg_path %_user_home/.gnupg
%_gpg_name %_fullname <%_email>
%_query_all_fmt %%{name}-%%{version}-%%{release}.%%{arch}
%_smp_mflags -j%{expand:%%(expr `grep -c '^processor[[:blank:]]*:' /proc/cpuinfo 2>/dev/null` + 1)}
%_tmppath /var/tmp/%{expand:%%(mkdir -p /var/tmp/%_whoami && echo %_whoami)}
