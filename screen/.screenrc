multiuser on
acladd aron,amg

bind j focus down
bind k focus up
bind l focus right
bind h focus left
bind + resize +5
bind - resize -5
bind = resize =

defutf8 on

# don't use the alternate window buffer
termcapinfo xterm* ti@:te@
termcapinfo rxvt* ti@:te@

# we're always on something xterm
termcapinfo xterm* XT

# force 256 colors
#term screen-256color
