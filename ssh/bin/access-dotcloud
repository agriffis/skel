#!/bin/bash

if [[ $1 == *.* ]]; then
    service=${1#dotcloud.}
else
    service=www
fi

if [[ $service != *.* ]]; then
    service=$service.0
fi

ssh=$(dotcloud info ${service%%.*} | sed -n "/^=== $service\$/,\$p" | awk '$1=="ssh:"{print $2;exit}')
[[ -n $ssh ]] || exit 1
ssh=${ssh##*@}
exec nc ${ssh/:/ }
